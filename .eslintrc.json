{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb",
        "airbnb/hooks"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": 0,
        "react/prop-types": 0,
        "react/jsx-props-no-spreading": 0,
        "jsx-a11y/anchor-is-valid": 0,
        "no-multi-assign": 0,
        "import/prefer-default-export": 0,
        "import/no-unresolved": 0,
        "jsx-a11y/label-has-associated-control": 0,
        "no-useless-catch": 0,
        "max-len": 0,
        "import/extensions": 0
    },
    "ignorePatterns": [
        "node_modules/",
        "src/public/js/",
        "*/**/utils.js"
    ]
}